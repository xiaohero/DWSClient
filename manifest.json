{
  "name": "SP采集器",
  "version": "1.0",
  //支持非iframe刷新重载
  "manifest_version": 2,
  "description": "SP采集器",
  "homepage_url": "http://www.xxx.com",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon128_128.jpg",
    "default_title": "SP采集器V1.0",
    "default_popup": "popup/menu.html"
  },
  "icons": {
    "16": "icon128_128.jpg"
    //指定"16"这个配置节点即可让浏览器右键菜单页面显示插件图标
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "contextMenus",
    "webNavigation",
    "management",
    "cookies",
    "storage",
    //插件图标右键菜单权限
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  //激活background页面eval函数
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end",//document_idle,document_start,document_end
      "js": [
        "buster.js"
      ],
      //先不注入iframe页面，以免多次请求服务器
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
  ]
}